<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit User</h2>
                {{#each userData}}
                <form action="/admin/edit-user/{{this._id}}" method="post">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control mb-2" value="{{this.name}}" required>

                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control mb-2" value="{{this.Email}}" required>
                    <button type="submit" class="btn btn-success mt-4">Edit</button>

                </form>
                {{/each}}
            </div>
        </div>
    </div>
</section>